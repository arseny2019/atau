section.contacts
    .container
        h1.contacts__title Контакты
        .contacts__grid
            .contacts__left
                a(href='tel: 73412777700').contacts__phone
                    include ../includes/icons/phone
                    span +7 (3412) 77-77-00
                .contacts__address
                    include ../includes/icons/map-pin
                    span г. Ижевск, Воткинское шоссе, 208
