@import "../vars.styl"

.advantages
  margin-top 120px

  @media $media-tablet
    margin-top 100px

  @media $media-tablet-vertical
    margin-top 80px

  @media $media-mobile
    margin-top 64px

  &__title
    text-align center

  &__grid
    margin-top 40px
    display flex
    justify-content center
    column-gap 20px

    @media $media-mobile
      margin-top 32px
      display grid
      grid-template-columns 1fr 1fr
      grid-column-gap 12px
      grid-row-gap 16px

  &__item
    max-width 315px
    display flex
    flex-direction column
    align-items center

    &-image
      width 80px
      height 80px
      object-position center
      object-fit contain

      @media $media-tablet
        width 64px
        height 64px

      @media $media-tablet-vertical
        width 48px
        height 48px

      @media $media-mobile
        width 32px
        height 32px

    &-title
      text-align center
      margin-top 12px
      font-size 32px
      line-height 36px
      font-weight 700

      @media $media-tablet
        font-size 2.2vw
        line-height 1.1

      @media $media-tablet-vertical
        font-size 24px
        line-height 28px

      @media $media-mobile
        font-size 20px
        line-height 22px
        white-space nowrap

    &-text
      text-align center
      margin-top 8px
      font-weight 500
      line-height 24px
      font-size 18px

      @media $media-tablet-vertical
        display none


  & + .partners
    margin-bottom 120px

    @media $media-tablet
      margin-bottom 100px

    @media $media-tablet-vertical
      margin-bottom 80px

    @media $media-mobile
      margin-bottom 64px
