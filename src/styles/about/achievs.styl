@import "../vars"

.achievs
  padding 48px 0 56px
  background-color $dark-blue

  @media $media-mobile
    padding 16px 0 32px

  &__title
    color white
    text-align center

  &__grid
    margin-top 64px
    padding 0 120px
    border-top 2px solid rgba(255, 255, 255, 0.28)
    display flex
    justify-content space-between

    @media $media-tablet
      padding 0 100px

    @media $media-tablet-vertical
      margin-top 40px
      padding 0 72px

    @media $media-mobile
      padding 0 48px

    @media $media-mobile-md
      margin-top 24px
      padding 0 20px
      border-top none

  &__item
    max-width 160px
    display flex
    flex-direction column
    align-items center
    position relative
    cursor pointer

    @media $media-tablet-vertical
      max-width 80px

    &::before
      content ''
      position absolute
      top -8px
      left 50%
      transform translateX(-50%)
      width 16px
      height 16px
      border-radius 50%
      background-color #515D85
      transition 300ms

      @media $media-mobile
        width 8px
        height 8px
        top -4px


    &-year
      user-select none
      margin-top 28px
      font-weight 800
      font-size 48px
      line-height 54px
      color #515D85
      transition 300ms

      @media $media-tablet
        font-size 40px
        line-height 48px

      @media $media-tablet-vertical
        font-size 28px
        line-height 30px

      @media $media-mobile
        font-size 17px
        line-height 20px
        font-weight 600
        margin-top 8px

    &-text
      width 426px
      margin-top 29px
      font-weight 400
      font-size 24px
      line-height 32px
      color white
      opacity 0
      transition 300ms
      text-align center
      pointer-events none

      @media $media-mobile
        display none

    &_active

      &::before
        background-color white

      & .achievs__item-year
        transform translateY(-5px)
        color white

        @media $media-mobile
          transform none

      & .achievs__item-text
        opacity 1

    &:nth-child(1) &-text
      transform translateX(calc(50% - 80px))
      text-align left

    &:nth-last-child(1) &-text
      transform translateX(calc(-50% + 80px))
      text-align right

  &__mobile-text
    display none

    @media $media-mobile
      max-width 375px
      position relative
      left 50%
      transform translateX(-50%)
      margin-top 16px
      display block
      text-align center
      font-size 16px
      line-height 20px
      font-weight 400
      color white
