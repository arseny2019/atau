@import "vars.styl"
@import "../../node_modules/swiper/swiper-bundle.css"

.swiper-button-prev, .swiper-button-next
  all initial

  &::after
    all initial

.slider
  height 675px

  @media $media-tablet
    height calc((100vw - 204px) * 0.594)

  @media $media-tablet-vertical
    height calc((100vw - 48px) * 0.594)

  @media $media-mobile-lg
    height calc((100vw - 40px) * 0.594)


  &-container
    padding 0 92px
    position relative

    @media $media-tablet
      padding 0 70px

    @media $media-tablet-vertical
      padding 0

  &__slide
    height 675px

    @media $media-tablet
      height calc((100vw - 204px) * 0.594)

    @media $media-tablet-vertical
      height calc((100vw - 48px) * 0.594)

    @media $media-mobile-lg
      height calc((100vw - 40px) * 0.594)

  &__image
    width 100%
    height 100%
    object-fit cover
    object-position center

  &-arrow
    position absolute
    left 0
    top 50%
    transform translateY(-50%) rotate(180deg)
    z-index 1
    cursor pointer

    @media $media-tablet
      left -6px
      transform translateY(-50%) rotate(180deg) scale(0.8)

    @media $media-tablet-vertical
      display none

    &_inactive
      color $gray-arrow !important
      cursor not-allowed

    &_next
      left auto
      right -6px
      transform translateY(-50%)

      @media $media-tablet
        transform translateY(-50%) scale(0.8)

.info-section
  padding-top 80px

  &__title
    @media $media-mobile
      font-size 36px
      line-height 38px

  &__top
    display flex
    flex-direction column
    align-items center

  &__subtitle
    margin-top 8px
    font-weight 500
    $regularFont()
    max-width 540px
    text-align center

  &__bottom
    display flex
    flex-wrap wrap
    justify-content center

  &__features
    width 100%
    padding 40px 120px 0
    display grid
    grid-template-columns auto auto auto
    grid-column-gap 140px

    @media $media-tablet
      grid-column-gap 100px

    @media $media-tablet-vertical
      grid-column-gap 24px
      grid-template-columns 1fr 1fr 1fr
      padding 40px 0 0

  &__feature
    max-width 285px

    @media $media-mobile-md
      max-width 100%

    &-title
      text-align center

      @media $media-tablet-vertical
        font-size 20px
        line-height 22px
        margin-top 4px

    &:nth-child(1) &-img
      background-image url("../img/feat-1.png")

    &:nth-child(2) &-img
      background-image url("../img/feat-2.png")

    &:nth-child(3) &-img
      background-image url("../img/feat-3.png")

    &-text
      margin-top 8px
      $fontRegular()
      font-weight 500
      text-align center

      @media $media-tablet-vertical
        display none

    &-img
      width 32px
      height 32px
      display none
      position relative
      left 50%
      transform translateX(-50%)
      background-position center
      background-repeat no-repeat
      background-size contain

      @media $media-tablet-vertical
        display inline-block

  &__more
    margin-top 32px

.category-section
  padding 120px 0
  position relative

  @media $media-tablet
    padding 100px 0

  @media $media-tablet-vertical
    padding 80px 0

  @media $media-mobile
    padding 64px 0

  &__title
    text-align center

  &__header
    display flex
    flex-direction column
    align-items center
    gap 16px

  &__subtitle
    max-width 540px
    text-align center
    $regularFont()
    font-weight 500

  &__grid
    margin-top 24px
    padding 0 70px
    display grid
    grid-column-gap 64px
    grid-template-columns 1fr 1fr 1fr

    @media $media-tablet
      grid-column-gap 24px
      padding 0 32px

    @media $media-tablet-vertical
      padding 0
      display flex
      flex-wrap wrap
      column-gap 20px
      row-gap 24px
      justify-content center

    @media $media-mobile
      row-gap 16px
      padding 0 44px

  &__item
    display flex
    flex-direction column

    @media $media-tablet-vertical
      width calc((100vw - 68px) / 2)

    @media $media-mobile
      width 100%

  &__item-img
    width 100%
    object-fit cover
    object-position center
    height 260px

    @media $media-tablet
      height calc((100vw - 176px) / 3 * 0.74)

    @media $media-tablet-vertical
      height calc((100vw - 68px) / 2 * 0.74)

    @media $media-mobile
      height 48vw

