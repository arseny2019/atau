    padding-top 100px

  @media $media-tablet-vertical
    padding-top 80px

  @media $media-mobile
    padding-top 64px

  &__header
    display flex
    flex-direction column
    align-items center
    gap 16px

  &__subtitle
    max-width 540px
    text-align center
    $regularFont()
    font-weight 500

  &__grid
    margin-top 24px
    display grid
    grid-column-gap 20px
    grid-template-columns 1fr 1fr 1fr

    @media $media-tablet-vertical
      margin-top 24px
      grid-template-columns auto auto
      grid-row-gap 16px

    @media $media-mobile
      padding 0 44px
      margin-top 16px
      grid-template-columns 1fr
