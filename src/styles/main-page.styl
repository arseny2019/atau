.feedback-section
  background-color $dark-blue
  padding 48px 0 56px
  color white

  @media $media-tablet-vertical
    padding 48px 0 80px

  @media $media-mobile
    padding 16px 0 80px

  &__container
    display flex
    flex-direction column
    align-items center

  &__title
    text-align center

  &__author
    margin-top 40px
    display flex
    flex-direction column
    align-items center
    gap 8px

    @media $media-mobile
      margin-top 16px
      gap 4px

    &-img
      width 120px
      height 120px
      object-position center
      object-fit cover
      border-radius 50%

      @media $media-mobile
        width 64px
        height 64px

    &-name
      $navigationFont()
      font-weight 700
      color white

  &__slider
    position relative
    width 100%
    margin-top 40px
    padding 0 136px

    @media $media-tablet-vertical
      padding 0 40px

    @media $media-mobile
      padding 0
      margin-top 24px

.feedback-slider
  height 492px
  max-width 874px

  @media (max-width: 1210px)
    height calc((100vw - 336px) * 0.5628)

  @media (max-width: 1002px)
    max-width 100%
    height calc((100vw - 128px) * 0.5628)

  @media $media-tablet-vertical
    max-width 100%
    height calc((100vw - 128px) * 0.5628)

  @media $media-mobile
    height calc((100vw - 20px) * 0.5628)

  &-text
    margin-top 24px
    color $gray-text
    font-weight 400
    font-size 24px
    line-height 32px
    text-align center

    @media $media-mobile
      margin-top 8px
      font-size 16px
      line-height 20px

  &-container
    padding 0 92px
    position relative

  &__slide
    height 492px

    @media (max-width: 1210px)
      height calc((100vw - 336px) * 0.5628)

    @media (max-width: 1002px)
      height calc((100vw - 128px) * 0.5628)

    @media $media-tablet-vertical
      height calc((100vw - 128px) * 0.5628)

    @media $media-mobile
      height calc((100vw - 20px) * 0.5628 - 12px)

  &__image
    width 100%
    height 100%
    object-fit cover
    object-position center

  &-arrow
    position absolute
    left 20px
    top 50%
    transform translateY(-50%) rotate(180deg)
    z-index 1
    color white
    cursor pointer
    transition 200ms

    @media $media-tablet-vertical
      height 40px
      width 40px
      top calc(100% + 68px)
      left calc(50% - 16px)
      transform translateX(-100%) rotate(180deg)

      & svg
        height 40px
        width 40px

    @media $media-mobile
      top calc(100% + 40px)

    @media $media-mobile-md
      top calc(100% + 58px)

    &:hover
      color $dark-blue-hover

    &_inactive
      color $gray-dark !important
      cursor not-allowed

    &_next
      left auto
      right 20px
      transform translateY(-50%)
      @media $media-tablet-vertical
        right auto
        left calc(50% + 16px)
        transform none

  &-pagination
    display none !important

