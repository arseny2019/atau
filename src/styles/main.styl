@import "vars.styl"
@import "header.styl"
@import "form.styl"
@import "footer.styl"
@import "mobile-menu.styl"
@import "modal.styl"
@import "main-page.styl"
@import "sidebar.styl"
@import "about/about.styl"
@import "category/category.styl"
@import "projects/projects.styl"
@import "blog/blog.styl"
@import "contacts.styl"

*
  box-sizing border-box

html, body
  padding 0
  margin 0
  font-family $Manrope
  color $main-black
  scroll-behavior smooth

body
  overflow-x hidden

ul
  margin 0
  padding 0
  list-style none

a
  text-decoration: none
  color unset

.overflow-hidden
  overflow hidden

.multiply-modal-overlay
  width 100vw

button
  -webkit-appearance none
  border none
  outline none
  cursor pointer
  background none
  font-size inherit
  font-weight inherit
  color inherit

input[type="submit"], input[type="text"]
  -webkit-appearance none

input[type="text"]
  -webkit-border-radius none

.container
  max-width 1320px
  margin 0 auto

  @media $media-tablet
    padding 0 32px

  @media $media-tablet-vertical
    padding 0 24px

  @media $media-mobile
    padding 0 20px

h2
  user-select none
  margin 0
  font-weight 800
  font-size 48px
  line-height 54px

  @media $media-tablet-vertical
    font-size 40px
    line-height 45px

  @media $media-mobile
    font-size 32px
    line-height 40px

  @media $media-mobile-lg
    font-size 28px
    line-height 30px


h3
  margin 0
  font-weight 700
  font-size 32px
  line-height 36px

  @media $media-tablet-vertical
    font-size 30px
    line-height 34px

  @media $media-mobile
    font-size 26px
    line-height 30px

  @media $media-mobile-lg
    font-size 24px
    line-height 28px

h4
  margin 0
  font-weight 700
  font-size 26px
  line-height 30px

  @media $media-tablet-vertical
    font-size 24px
    line-height 28px

  @media $media-mobile
    font-size 20px
    line-height 24px

p
  margin 0

.main-button
  border-radius 40px
  padding 16px 40px
  $navigationFont()
  background-color $main-black
  color white
  transition 200ms
  font-weight 800

  @media $media-mobile
    padding 12px 32px
    font-size 14px
    line-height 19px

  &_white
    background-color white
    color $main-black

  &:hover
    background-color $blue-hover
    border-color $blue-hover

.blue-text-hover
  transition 200ms

  &:hover
    color $blue-hover

.blue-background-hover
  transition 200ms

  &:hover
    background-color $blue-hover


.swiper-pagination
  bottom -20px !important
  display none

  @media $media-tablet-vertical
    display block


.swiper-pagination-bullet
  width 24px
  height 8px
  border-radius 4px
  background-color $gray-arrow
  cursor pointer
  opacity 1

  &-active
    background-color $pagenum-blue

.active-link
  color $pagenum-blue

.feedback-section__slider
  .swiper-pagination
    @media $media-tablet-vertical
      bottom -80px !important
    @media $media-mobile
      bottom -48px !important

.mobile-hidden
  @media $media-mobile
    display none

.mobile-only
  display none
  @media $media-mobile
    display inline-block

input[type='submit']
  border none
  cursor pointer

.hidden
  display none

.not-found
  display flex
  flex-direction column
  align-items center

  &__title
    font-weight 800
    font-size 200px
    line-height 200px
    color #24419B

    @media $media-mobile
      font-weight 800
      font-size 96px
      line-height 100px

  &__subtitle
    margin-top 16px
    font-weight 800
    font-size 64px
    line-height 72px

    @media $media-mobile
      margin-top 8px
      font-weight 800
      font-size 36px
      line-height 38px

  &__button
    margin-top 48px
    display inline-block

  &-container
    width 100vw
    height 100vh
    display flex
    justify-content center
    align-items center

  &__image
    position absolute
    object-fit contain
    object-position center
    z-index -1
    width 10vw
    height 10vw

button
  cursor pointer

