@import "vars.styl"

.new-footer
  color white
  font-family: Fira Sans;
  background-color $new-main-black
  border-top-right-radius 80px
  border-top-left-radius 80px
  padding-top: 56px
  padding-bottom: 96px

  @media $media-mobile
    padding-top: 24px
    padding-bottom: 56px
    border-top-left-radius 48px
    border-top-right-radius 48px

  &__top
    display grid
    grid-template-columns 1fr clamp(343px, 44%, 491px) 1fr
    grid-gap 40px

    @media $media-mobile
      grid-template-columns 1fr
      grid-gap 32px

  &__menu
    padding-top 13px
    justify-self start
    display grid
    grid-gap 24px

    @media $media-mobile
      display none

    & a
      font-size: 18px;
      font-style: normal;
      font-weight: 500;
      line-height: 22px;

    &-mobile
      display none

      @media $media-mobile
        display flex
        justify-content space-between

      & div
        display grid
        grid-template-columns auto
        grid-gap 24px
        justify-content start

        & a
          justify-self start

      & div:nth-child(2)
        justify-content end
        & a
          justify-self end


      & a
        font-size: 18px;
        font-style: normal;
        font-weight: 500;
        line-height: 22px;


  &__form-container
    display flex
    flex-direction column
    align-items center

    @media $media-mobile
      width clamp(343px, 40%, 491px)
      margin 0 auto

    h3
      text-align: center;
      font-size: 32px;
      font-weight: 500;
      line-height: 36px; /* 112.5% */
      letter-spacing: -0.32px;

      @media $media-mobile
        font-size: 24px;
        font-weight: 500;
        line-height: 24px; /* 100% */
        letter-spacing: -0.48px;

    p
      margin-top: 8px
      color: #878787;
      font-size: 18px;
      font-style: normal;
      font-weight: 400;
      line-height: 20px; /* 111.111% */
      letter-spacing: -0.36px;

      @media $media-mobile
        margin-top: 4px

  &__form
    margin-top: 32px
    width: 100%

    @media $media-mobile
      margin-top: 16px

    &-input
      padding: 24px
      color white
      border-radius: 24px;
      border: 1px solid white;
      background: transparent;
      font-size: 18px;
      font-weight: 400;
      line-height: 20px; /* 111.111% */
      letter-spacing: -0.18px;
      width 100%

      &:placeholder
        color #878787

    &-submit
      margin-top: 24px
      position relative
      left 50%
      transform translateX(-50%)

  &__bottom
    margin-top: 58px
    display flex
    justify-content space-between

    @media $media-mobile
      margin-top: 40px

    &-left
      display flex

      @media $media-mobile
        flex-direction column-reverse

      & .new-footer__link:nth-child(1)
        @media $media-mobile
          margin-top: 12px

  &__features
    display flex

    & img
      width: 32px
      height: 32px

      @media $media-mobile
        width: 24px
        height: 24px

    & a + a
      margin-left: 32px

      @media $media-mobile
        margin-left: 24px

  &__link
    display flex
    align-items center
    font-size: 18px;
    font-weight: 500;
    line-height: 22px; /* 122.222% */

    @media $media-mobile
      font-size: 18px;
      font-weight: 500;
      line-height: 22px; /* 122.222% */

    & + &
      margin-left: 72px
      cursor pointer

      @media $media-tablet-vertical
        margin-left 32px

      @media $media-mobile
        margin-left: 0

    @media $media-mobile
      font-weight: 700;
      font-size: 12px;
      line-height: 16px; /* 133.333% */

    & img
      margin-right: 8px

      @media $media-mobile
        width: 24px
        height: 24px