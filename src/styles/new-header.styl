@import "vars.styl"

.new-header
  font-family: Fira Sans;

  &__burger
    width 24px
    height 24px
    cursor pointer
    margin-top: -2px

    &-line
      position relative
      display block
      top 50%
      left 50%
      transform translate(-50%, 50%)
      width 18px
      height 2px
      background-color black

      &::before , &::after
        content ''
        position absolute
        left 0
        width 100%
        height 100%
        top -6px
        background-color black

      &::after
        top 6px


  &__top
    padding-top: 40px
    padding-bottom: 16px
    display grid
    grid-template-columns 1fr auto 1fr

    @media $media-mobile
      padding-top: 10px
      padding-bottom: 0

    & img
      width: 32px
      height: 32px

  &__socials
    justify-self end
    display flex

    & a + a
      margin-left: 32px

  &__link
    font-size: 18px;
    font-style: normal;
    font-weight: 500;
    line-height: 22px; /* 122.222% */
    letter-spacing: -0.36px;
    display flex
    align-items center

    & img
      margin-right: 8px

  &__logo
    width: 168px !important
    height: 28px !important
    object-fit contain

    @media $media-mobile
      width: 126px !important
      height: 21px !important

  &__bottom
    background-color $new-main-black
    border-radius 24px
    padding 24px 0
    color white

    & .new-container
      display flex
      justify-content space-between

  &__feedback, &__menu
    font-size: 18px;
    font-style: normal;
    font-weight: 500;
    line-height: 22px; /* 122.222% */
    letter-spacing: -0.36px;

  &__feedback
    color $orange
    font-weight: 800

  &__menu
    display flex

    & a + a
      margin-left: 64px

  &__phone
    & img
      @media $media-1280
        margin-right: 0

    & span
      @media $media-1280
        display none
