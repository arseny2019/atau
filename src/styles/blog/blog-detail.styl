@import "../vars.styl"

.blog-detail
  padding-bottom 120px

  @media $media-tablet
    padding-bottom 100px

  @media $media-tablet-vertical
    padding-bottom 80px

  @media $media-mobile
    padding-bottom 64px

  &__title
    margin-top 24px
    text-align center
    font-size 64px
    line-height 72px

    @media $media-tablet-vertical
      font-size 48px
      line-height 54px

    @media $media-mobile
      font-size 28px
      line-height 30px
      margin-top 9px

  &__back
    margin-top 40px
    display flex
    align-items center
    color $link
    font-size 18px
    line-height 24px
    font-weight 800
    text-decoration underline

    @media $media-mobile
      margin-top 24px
      font-size 16px
      line-height 22px

  &__image
    margin-top 40px
    height 780px
    width 1036px
    position relative
    left 50%
    transform translateX(-50%)
    object-position center
    object-fit cover
    border-radius 24px

    @media $media-tablet
      width calc(100vw - 64px)
      max-width 1036px
      height calc((100vw - 64px) * 0.72)
      max-height 780px
      border-radius 20px

    @media $media-tablet-vertical
      border-radius 16px
      margin-top 32px
      width calc(100vw - 48px)
      height calc((100vw - 48px) * 0.72)

    @media $media-mobile
      border-right 8px
      margin-top 24px
      width calc(100vw - 40px)
      height calc((100vw - 40px) * 0.72)

  &__grid
    margin-top 32px
    display grid
    grid-template-columns 1fr 315px
    grid-column-gap 20px

    @media $media-tablet-vertical
      grid-template-columns 1fr

    @media $media-mobile
      margin-top 24px

  &__text
    font-weight 400
    font-size 24px
    line-height 33px

    @media $media-tablet
      font-size 22px
      line-height 30px

    @media $media-mobile
      font-size 16px
      line-height 20px

  &__date
    display flex
    flex-direction column
    align-items flex-start

    & span:nth-child(1)
      font-weight 800
      font-size 18px
      line-height 24px

      @media $media-mobile
        font-weight 700
        font-size 12px
        line-height 16px

    & span:nth-child(2)
      margin-top 8px
      font-weight 400
      font-size 24px
      line-height 32px

      @media $media-mobile
        margin-top 4px
        font-weight 500
        font-size 14px
        line-height 16px

  &__author
    display flex
    flex-direction column
    align-items flex-end

    @media $media-tablet-vertical
      display none

    &_mobile
      display none

      @media $media-tablet-vertical
        display flex


    & span:nth-child(1)
      font-weight 800
      font-size 18px
      line-height 24px


      @media $media-mobile
        font-weight 700
        font-size 12px
        line-height 16px


    & span:nth-child(2)
      margin-top 6px
      font-weight 400
      font-size 24px
      line-height 32px

      @media $media-mobile
        margin-top 4px
        font-weight 500
        font-size 14px
        line-height 16px

    & span:nth-child(3)
      margin-top 2px
      font-weight 400
      font-size 16px
      line-height 22px
      color #878787

      @media $media-mobile
        margin-top 0
        font-weight 500
        font-size 12px
        line-height 16px


  &__gallery
    margin-top 180px
    display grid
    grid-template-columns 1fr
    grid-row-gap 24px

    @media $media-tablet-vertical
      display none

    &-mobile
      display none

      &-button
        display none
        margin-top 12px !important
        position relative
        left 50%
        transform translateX(-50%)

        @media $media-tablet-vertical
          display inline-block

      @media $media-tablet-vertical
        margin-top 12px
        display grid
        grid-template-columns 1fr 1fr
        grid-column-gap 12px

      & img
        width 100%
        height calc((100vw - 48px) / 2 * 0.72)

        @media $media-mobile
          height calc((100vw - 40px) / 2 * 0.72)

    & img
      width 100%
      height 226px

  &__footer
    margin-top 24px
    display flex
    justify-content space-between

