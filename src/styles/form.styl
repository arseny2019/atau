@import "vars.styl"

form
  margin 0

.text-input
  padding 16px 24px
  background-color #F6F6F6;
  border-radius 46px
  width 100%
  $font(18px, 24px)
  font-weight 500
  border 2px solid transparent

  &:focus
    background-color rgba(118, 130, 169, 0.1)

  &:hover
    border 2px solid rgba(36, 72, 183, 0.3)

  &.error
    border 2px solid rgba(255, 0, 0, 0.29)

  &::placeholder
    color #BCC7D2

.text-area
  height 148px
  resize none
  border-radius 20px
  font-family Manrope

  @media $media-mobile-lg
    height 98px

.privacy-acceptance
  display block
  padding-left 32px
  margin-top 24px
  font-weight 500
  font-size 18px
  line-height 24px
  position relative

  @media $media-mobile-lg
    $font(12px, 16px)

  & a
    font-weight 800
    color $link
    text-decoration underline

    @media $media-mobile-lg
      text-decoration none

.hidden-br
  @media $media-mobile-lg
    display none

.accept
  width 20px
  height 20px
  display inline-block
  position absolute
  left 2px
  top 2px
  border-radius 6px
  border 2px solid $link

input[type='checkbox']:checked + .accept
  &::before
    content ''
    position absolute
    left 6px
    top 11px
    width 6px
    height 2px
    border-radius 2px
    background-color $link
    transform rotate(-135deg)
    transform-origin left

  &::after
    content ''
    position absolute
    left 6px
    top 11px
    width 12px
    height 2px
    border-radius 2px
    background-color $link
    transform rotate(-50deg)
    transform-origin left

.form-submit
  margin-top 24px
  position relative
  left 50%
  transform translateX(-50%)

.question-modal, .call-modal, .order-modal, .success-modal, .slider-modal
  padding 24px 24px 48px
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  width 488px
  background-color white
  border-radius 24px

  @media $media-mobile-lg
    padding 16px 16px 24px
    max-width 488px
    width calc(100vw - 40px)

  &-overlay
    position fixed
    top 0
    left 0
    width 100vw
    height 100vh
    background-color: rgba(245, 245, 245, 0.8);
    z-index 999
    transition 400ms
    visibility hidden
    opacity 0
    overflow auto

  &__cross
    width 16px
    height 16px
    display block
    position absolute
    right 28px
    top 36px
    cursor pointer

    @media $media-mobile-lg
      right 20px
      top 20px

    &::before, &::after
      content ''
      position absolute
      width 18px
      height 2px
      top 7px
      left 50%
      border-radius 1px
      transform translateX(-50%) rotate(45deg)
      background-color $gray-sidebar

    &::after
      transform translateX(-50%) rotate(-45deg)

  &__title
    $font(32px, 36px)
    font-weight 700
    text-align center

    @media $media-mobile-lg
      $font(20px, 22px)

  &__subtitle
    text-align center
    margin-top 8px
    $regularFont()
    font-weight 500
    color $gray-sidebar

    @media $media-mobile-lg
      margin 4px auto 0
      $font(12px, 16px)
      max-width 260px

  &__form-container
    margin-top 32px
    display flex
    flex-direction column
    row-gap 12px


.overlay-show
  visibility visible
  opacity 1

.success-modal
  &__button
    padding 16px 40px
    border 2px solid #073EE6
    border-radius 40px
    margin-top 24px
    font-weight 800
    font-size 16px
    line-height 22px
    position relative
    left 50%
    transform translateX(-50%)

    @media $media-mobile
      padding 12px 32px
      margin-top 16px
      font-size 14px
      line-height 19px

.slider-modal
  width calc(100vw - 120px)
  max-width 1320px
  padding 80px 140px 32px

  @media $media-tablet
    width calc(100vw - 64px)
    padding 48px 102px 32px

  @media $media-tablet-vertical
    width calc(100vw - 48px)
    padding 36px 72px 32px

  @media $media-mobile
    width calc(100vw - 40px)
    padding 56px 8px 24px

  &__image
    max-height calc(100vh - 204px)
    width 100%
    height 780px
    border-radius 24px
    object-position center
    object-fit cover

    @media $media-tablet
      max-height calc(100vh - 172px)
      height calc((100vw - 268px) * 0.724)
      border-radius 20px

    @media $media-tablet-vertical
      max-height calc(100vh - 160px)
      height calc((100vw - 192px) * 0.724)
      border-radius 16px

    @media $media-mobile
      max-height calc(100vh - 126px)
      height calc((100vw - 56px) * 0.724)
      border-radius 12px

  &-arrows
    position relative
    left 50%
    transform translateX(-50%)
    margin-top 32px
    display inline-flex
    column-gap 32px

    @media $media-mobile
      margin-top 16px
      column-gap 24px

  &-arrow
    cursor pointer
    & svg
      @media $media-mobile
        width 40px
        height 40px

    &_prev
      transform rotate(180deg)

    &.swiper-button-disabled
      color $gray-arrow !important
      cursor not-allowed

